################################################################################
# Comprehensive Dockerfile for Gemini CLI OSS-Fuzz integration
# Dual-language support: TypeScript/JavaScript + Go
################################################################################

FROM gcr.io/oss-fuzz-base/base-builder

# Install Go
RUN install_go.sh

# Install Node.js and npm
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20.x (LTS)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs

# Install additional build dependencies
RUN apt-get update && apt-get install -y \
    git \
    make \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies for enhanced features
RUN pip3 install --no-cache-dir \
    numpy \
    requests \
    jsonschema

# Copy project source
COPY . $SRC/gemini-cli/

# Set working directory
WORKDIR $SRC/gemini-cli/

# Verify installations
RUN go version
RUN node --version
RUN npm --version
RUN python3 --version

# Create necessary directories
RUN mkdir -p fuzzers gofuzz/fuzz seeds/comprehensive

# Print completion message
RUN echo "Comprehensive Docker environment ready for Gemini CLI dual-language fuzzing"
RUN echo "  - TypeScript/JavaScript: Node.js 20.x + Jazzer.js"
RUN echo "  - Go: Latest Go version with sanitizers"
RUN echo "  - Python: Enhanced analysis tools"
RUN echo "  - Security focus: Issue #1121 and comprehensive coverage"
